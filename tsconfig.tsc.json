{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./svelte",
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./svelte",
    "target": "ES2017"
  },
  "indent": [true, "spaces", 2],
  "exclude": ["./node_modules"],
  "include": ["./src/**/*.ts"]
}
