{
  "name": "eb-designsystem",
  "version": "0.2.0",
  "main": "index.js",
  "repository": "git@github.com:EkstraBladetUdvikling/eb-designsystem.git",
  "author": "tegner <jesper.h.tegner@jppol.dk>",
  "license": "MIT",
  "scripts": {
    "build": "yarn build:css && yarn build:watcher && postcss dist/eb-designsystem--watcher.css -o dist/eb-designsystem--watcher.css --no-map -u postcss-preset-env && yarn build:snippets",
    "build:css": "node build-css.js",
    "build:nonie": "node build-css.js --nonie",
    "build:ie": "node build-css.js --ie",
    "build:preview": "postcss preview/css/_index.css -o preview/css/main.css --no-map -u postcss-import",
    "build:snippets": "node build-snippets",
    "build:watch": "onchange 'src/**/*.css' -- yarn build:watcher & onchange 'preview/**/{_*.css,html}' -- yarn build:preview",
    "build:watcher": "yarn build:css --watcher && yarn build:preview",
    "dist": "yarn build:css",
    "dist:move": "yarn dist && yarn move_to_eb",
    "installds": "node install-system",
    "installds:eb": "node install-system ../ekstrabladet/ekstrabladet-publication/src/main/frontend/css-main/main/css",
    "installsnippets": "node install-snippets",
    "installsnippets:eb": "node install-snippets ../ekstrabladet/ekstrabladet-publication/src/main/.vscode",
    "move_to_eb": "yarn installds:eb",
    "start": "yarn build:watcher && yarn build:preview && yarn build:watch & bundle exec jekyll serve --livereload"
  },
  "dependencies": {
    "@ekstra-bladet/eb-colors": "^2.6.0",
    "csscomb": "^4.3.0",
    "postcss": "^8.1.10",
    "postcss-cli": "^8.3.0",
    "postcss-custom-media": "^7.0.8",
    "postcss-custom-properties": "^10.0.0",
    "postcss-discard-duplicates": "^4.0.2",
    "postcss-discard-unused": "^4.0.1",
    "postcss-load-config": "^3.0.0",
    "postcss-merge-rules": "^4.0.3",
    "postcss-preset-env": "^6.7.0",
    "postcss-selectorcleanse": "^1.0.6"
  },
  "devDependencies": {
    "cpx": "^1.5.0",
    "normalize.css": "^8.0.1",
    "onchange": "^7.1.0",
    "postcss-import": "^13.0.0"
  }
}
