{
  "name": "@ekstra-bladet/designsystem",
  "version": "8.0.0",
  "main": "svelte/index.js",
  "repository": "git@github.com:EkstraBladetUdvikling/eb-designsystem.git",
  "author": "tegner <jesper.h.tegner@jppol.dk>",
  "files": [
    "./css",
    "./snippets",
    "./svelte"
  ],
  "license": "MIT",
  "scripts": {
    "build": "yarn lint && yarn validate && rm -rf ./dist && yarn build:typescript && yarn build:designsystem && yarn svgs && yarn build:docs",
    "build:css": "node node/build-css.js",
    "build:designsystem": "yarn build:css && yarn build:snippets",
    "build:docs": "yarn rollup -c --bundleConfigAsCjs",
    "build:snippets": "rm -rf ./snippets && node node/build-snippets",
    "build:typescript": "rm -rf ./svelte && node node/move-svelte && yarn tsc --project tsconfig.typescript.json",
    "build:watch": "onchange 'src/**/*.css' -- yarn build:css",
    "dev": "yarn build:typescript && yarn build:css & yarn build:watch & yarn rollup -c -w --bundleConfigAsCjs",
    "predev": "yarn svgs",
    "start": "sirv docs",
    "validate": "svelte-check || { echo 'svelte-check failed' ; exit: 1; }",
    "dist": "yarn build",
    "lint": "yarn eslint || { echo 'linting failed' ; exit: 1; }",
    "prepare": "yarn build:typescript",
    "prepublish": "yarn dist",
    "installsnippets": "node node/install-snippets",
    "installsnippets:eb": "node node/install-snippets ../ekstrabladet/ekstrabladet-publication/src/main/.vscode",
    "copy_svg": "node node/copy_svg.mjs",
    "svgs": "node node/svgs.js && yarn copy_svg"
  },
  "dependencies": {
    "@ekstra-bladet/eb-colors": "4.0.6",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@tsconfig/svelte": "^5.0.4",
    "fitty": "^2.3.7",
    "glob": "^11.0.1",
    "prismjs": "^1.29.0",
    "rollup": "^4.34.8",
    "rollup-plugin-css-only": "^4.5.2",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-svelte": "^7.2.2",
    "rollup-plugin-svelte-svg": "^1.0.0-beta.6",
    "sirv-cli": "^3.0.1",
    "svelte": "5.20.2",
    "svelte-check": "^4.1.4",
    "svelte-preprocess": "^6.0.3",
    "svelte-prism": "^1.1.6",
    "tippy.js": "^6.3.7"
  },
  "devDependencies": {
    "@dvcol/svelte-simple-router": "^1.10.3",
    "@eslint/js": "^9.20.0",
    "eslint": "9.20.1",
    "globals": "^15.15.0",
    "normalize.css": "^8.0.1",
    "onchange": "^7.1.0",
    "postcss": "^8.5.3",
    "postcss-custom-media": "^11.0.5",
    "postcss-custom-properties": "^14.0.4",
    "postcss-discard-duplicates": "^7.0.1",
    "postcss-discard-unused": "^7.0.3",
    "postcss-import": "^16.1.0",
    "postcss-load-config": "^6.0.1",
    "postcss-merge-rules": "^7.0.4",
    "postcss-preset-env": "^10.1.4",
    "postcss-selectorcleanse": "^1.0.6",
    "svg-sprite": "^2.0.4",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1"
  },
  "resolutions": {
    "cliui": "^8.0.1",
    "glob": "^10.0.4",
    "string-width-cjs": "^5.1.1",
    "strip-ansi-cjs": "^8.0.0",
    "wrap-ansi-cjs": "^8.0.0",
    "yargs": "^17.7.2"
  }
}
